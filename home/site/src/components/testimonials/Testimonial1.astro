---

<style>
  .keen-slider__slide {
    overflow: visible;
  }
</style>
<section class="overflow-hidden">
  <div
    class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3 w-full py-12 lg:py-24"
  >
    <div class="px-8 lg:px-20">
      <Text
        tag="h2"
        variant="displayLG"
        class="font-serif italic text-base-900"
      >
        What creators are saying
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="text-base-500 max-w-xl mx-auto mt-2"
      >
        Real stories from artists, engineers, and dreamers using our gear every
        day.
      </Text>
      <div class="flex gap-2 mt-8">
        <Button
          iconOnly
          size="base"
          variant="muted"
          aria-label="Previous slide"
          id="keen-slider-previous"
          ><ChevronLeft slot="icon" size="sm" />
        </Button>
        <Button
          iconOnly
          size="base"
          variant="muted"
          aria-label="Next slide"
          id="keen-slider-next"
        >
          <ChevronRight slot="icon" size="sm" />
        </Button>
      </div>
    </div>
    <div id="keen-slider" class="keen-slider lg:col-span-2 w-max">
      {
        testimonials.map((testimonial) => (
          <article class="relative isolate keen-slider__slide overflow-hidden">
            <Image
              width={800}
              height={800}
              src={testimonial.image}
              alt={testimonial.name}
              loading="eager"
              decoding="async"
              class="aspect-square object-cover w-full "
            />

            <div class="  flex flex-col justify-end  text-base-900 mt-4">
              <blockquote class="text-sm">
                <Text tag="p" variant="textSM" class=" italic text-base-500">
                  “{testimonial.text}”
                </Text>
              </blockquote>
              <footer class="mt-4 text-right">
                <Text
                  tag="h3"
                  variant="textSM"
                  class="text-base-900 font-semibold"
                >
                  {testimonial.name}
                </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class="text-base-500 font-medium"
                >
                  {testimonial.role}, {testimonial.company}
                </Text>
              </footer>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
<script type="module">
  import KeenSlider from "https://cdn.jsdelivr.net/npm/keen-slider@6.8.6/+esm";
  const keenSlider = new KeenSlider(
    "#keen-slider",
    {
      loop: true,
      slides: {
        origin: "center",
        perView: 1.25,
        spacing: 16,
      },
      breakpoints: {
        "(min-width: 1024px)": {
          slides: {
            origin: "auto",
            perView: 2.2,
            spacing: 32,
          },
        },
      },
    },
    []
  );
  const keenSliderPrevious = document.getElementById("keen-slider-previous");
  const keenSliderNext = document.getElementById("keen-slider-next");
  keenSliderPrevious.addEventListener("click", () => keenSlider.prev());
  keenSliderNext.addEventListener("click", () => keenSlider.next());
</script>
