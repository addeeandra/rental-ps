---
// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout hideNav={true} hideFooter={true}>
  <section>
    <Wrapper variant="standard" class="py-12">
      <div
        class="flex flex-col items-center justify-center text-center gap-12 h-dvh"
      >
        <div class="max-w-xl mx-auto">
          <Logo class="h-12 mx-auto text-accent-500" />
          <Text tag="h1" variant="textLG" class="mt-12 text-base-900">
            404 Page not found
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 text-balance text-base-500"
          >
            The page you are looking for does not exist. Please try again. If
            the problem persists, please contact us.
          </Text>
          <div class="flex justify-center mt-12">
            <Button isLink={true} href="/" size="xs" variant="accent">
              Go back to store
            </Button>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
