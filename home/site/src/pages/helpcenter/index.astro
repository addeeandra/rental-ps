---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import HelpEntries from "@/components/helpcenter/HelpEntries.astro";
// Content
import { getCollection } from "astro:content";
const allEntries = await getCollection("helpcenter");
---
<BaseLayout>
  <section>
    <Wrapper variant="standard" class="12 lg:pt-40">
      <div class="max-w-4xl text-balance">
        <Text
          tag="h1"
          variant="displayXL"
          class="font-serif italic font-medium tracking-tight text-base-900"
        >
          Need a hand?
          <span class="font-sans not-italic block">
            Browse guides, tips, and answers — all in one place.
          </span>
        </Text>
        <Text tag="p" variant="textLG" class="max-w-md mt-2 text-base-500">
          Whether you're stuck, curious, or just exploring — the Help Center has
          your back.
        </Text>
      </div>
      <div class="flex flex-col mt-12 divide-y divide-base-200">
        {allEntries.map((post) => <HelpEntries post={post} />)}
      </div>
    </Wrapper>
  </section>
</BaseLayout>
